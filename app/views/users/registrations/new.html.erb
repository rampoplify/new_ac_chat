<div class="form-group mb-3 p-5" style="max-width: 600px;">
  <h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field mb-3">
      <%#= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter email' %>
    </div>

    <div class="field mb-3">
      <%= f.text_field :username, class: 'form-control', placeholder: 'Enter Username' %>
    </div>
    <div class="field mb-3">
      <%#= f.label :password %>
      <% if @minimum_password_length %>
      <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" , class: 'form-control', placeholder: 'Enter password' %>
    </div>

    <div class="field mb-3">
      <%#= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'form-control', placeholder: 'Enter confirmation password' %>
    </div>

    <div class="field mb-3">
      <%= f.submit "Sign up", class: 'btn btn-outline-primary btn-block' %>
    </div>
  <% end %>
</div>
<%= render "users/shared/links" %>
